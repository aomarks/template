{
  "name": "@aomarks/template",
  "private": true,
  "version": "0.0.1",
  "description": "A template web and node project",
  "author": "Alexander Marks <aomarks@gmail.com>",
  "license": "Apache-2.0",
  "homepage": "https://github.com/aomarks/template#readme",
  "bugs": {
    "url": "https://github.com/aomarks/template/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/aomarks/template.git",
    "directory": "packages/core"
  },
  "type": "module",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "wireit",
    "test": "wireit",
    "test:web": "wireit",
    "test:node": "wireit",
    "lint": "wireit",
    "format": "wireit"
  },
  "wireit": {
    "build": {
      "dependencies": [
        "./packages/component:build",
        "./packages/server:build"
      ]
    },
    "test": {
      "dependencies": [
        "test:web",
        "test:node"
      ]
    },
    "test:web": {
      "dependencies": [
        "./packages/component:test"
      ]
    },
    "test:node": {
      "dependencies": [
        "./packages/server:test"
      ]
    },
    "format": {
      "command": "prettier \"./packages/*/src/**/*.ts\" --check --cache --cache-strategy=metadata --write",
      "files": [
        ".prettierrc.json",
        "packages/*/src/**/*.ts"
      ],
      "output": []
    },
    "lint": {
      "dependencies": [
        "lint:eslint",
        "lint:prettier"
      ]
    },
    "lint:eslint": {
      "command": "eslint --color --cache --cache-location .eslintcache \"packages/*/src/**/*.ts\"",
      "files": [
        ".eslintrc.cjs",
        "packages/*/src/**/*.ts",
        "packages/*/src/**/*.ts"
      ],
      "output": [
        ".eslintcache"
      ]
    },
    "lint:prettier": {
      "command": "prettier \"./packages/*/src/**/*.ts\" --check --cache --cache-strategy=metadata",
      "files": [
        ".prettierrc.json",
        "packages/*/src/**/*.ts",
        "packages/*/src/**/*.ts"
      ],
      "output": []
    }
  },
  "devDependencies": {
    "@esm-bundle/chai": "^4.3.4",
    "@types/mocha": "^10.0.9",
    "@types/node": "^22.9.0",
    "@typescript-eslint/eslint-plugin": "^8.14.0",
    "@web/dev-server": "^0.4.6",
    "@web/test-runner": "^0.19.0",
    "@web/test-runner-playwright": "^0.11.0",
    "eslint": "^9.15.0",
    "playwright": "^1.48.2",
    "prettier": "^3.3.3",
    "typescript": "^5.6.3",
    "wireit": "^0.14.9"
  }
}
